<!-- edit/create Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Reminders For ${datehere}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="btn-group btn-group-sm" role="group" aria-label="Small button group">
                    <button type="button" class="btn btn-secondary" id="addReminder">ADD REMINDER</button>
                </div>
                <div class="spacer"></div>
                <table class="table">
                    <thead>
                        <tr>

                            <th scope="col">Client</th>
                            <th scope="col">Appt Time</th>
                            <th scope="col">Edit</th>
                        </tr>
                    </thead>
                    <tbody id="appointmentsList">
                        <tr class="hide" id="newAppointment">
                            <td>
                                <div class="form-group">

                                    <input type="text" class="form-control" id="clientNameInput"
                                        placeholder="Enter Name">
                                </div>
                            </td>
                            <td><input type="text" class="form-control" id="clientTimeInput" placeholder="Enter Time">
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group" aria-label="Small button group">

                                    <button type="button" id="saveNewAppointmentBtn"
                                        class="btn btn-secondary">SAVE</button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td><input class="form-control name-input" type="text" placeholder="Client Name" readonly>
                            </td>
                            <td><input class="form-control time-input" type="text" placeholder="Time" readonly></td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group" aria-label="Small button group">
                                    <button type="button" class="btn btn-secondary edit-appt-button">EDIT</button>
                                    <button type="button"
                                        class="hide btn btn-secondary save-edit-appt-button">SAVE</button>
                                    <button type="button"
                                        class="hide btn btn-secondary cancel-edit-appt-button">CANCEL</button>
                                    <button type="button" class="btn btn-secondary delete-appt-button">DELETE</button>
                                </div>
                            </td>
                        </tr>
                        <tr>

                            <td>${clientname}</td>
                            <td>${time}</td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group" aria-label="Small button group">
                                    <button type="button" class="btn btn-secondary">EDIT</button>
                                    <button type="button" class="btn btn-secondary">DELETE</button>
                                </div>
                            </td>
                        </tr>
                        <tr>

                            <td>${clientname}</td>
                            <td>${time}</td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group" aria-label="Small button group">
                                    <button type="button" class="btn btn-secondary">EDIT</button>
                                    <button type="button" class="btn btn-secondary">DELETE</button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                {{!-- <button type="button" class="btn btn-primary">Save changes</button> --}}
            </div>
        </div>
    </div>
</div>